name: Deploy to ECS

on:
  push:
    branches:
      - main

jobs:
  deploy:
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v1

      - name: Set up Terraform
        uses: hashicorp/setup-terraform@v1

      - name: Initialize Terraform
        run: terraform init

      - name: Deploy Infrastructure
        run: terraform apply -auto-approve

      - name: Save terraform output
        run: |
          echo "instance_ip=$(terraform output -raw instance_ip)" >> $GITHUB_ENV
          echo "$(terraform output -raw private_key)" > private_key.pem
          chmod 600 private_key.pem

      - name: Build Docker image
        run: docker build -t vishweshrushi/strapi:latest .

      - name: Log in to Docker Hub
        run: echo "${{ secrets.vishweshrushi }}" | docker login -u vishweshrushi --password-stdin

      - name: Push Docker image to Docker Hub
        run: docker push vishweshrushi/strapi:latest
        
      - name: Deploy docker image on ec2
        run: |
          ssh -i private_key.pem ubuntu@${{ env.instance_ip }} << EOF
            docker pull vishweshrushi/strapi:latest
            docker run -d -p 1337:1337 vishweshrushi/strapi:latest
          EOF
